@require('../common/base.styl')

#container
  display: grid
  grid-template: auto 1fr / @css{min(400px, 50%)} 1fr @css{min(500px, 50%)}
  height: 100%
  @require('../main_interface/top.styl')
  #graph_container
    grid-column: 1 / 4
    grid-row: 2
    .vis-network
      outline: none
  #loading
    display: grid
    place-items: center
    font-size: 5vw
  #left_panel
    grid-row: 2
    grid-column: 1
    z-index: 1
    min-height: 0
    display: grid
    grid-template-rows: 1fr auto
    #left_panel_controls
      grid-row: 2
      display: flex
      gap: 1rem
      padding: 1rem
    .command_title
      min-height: 3rem
      h3
        text-align: left
  #selection
    grid-row: 2
    grid-column: 3
    z-index: 1
    overflow-y: auto
#tooltip
  display: flex
  flex-direction: column
  background-color: button_background_color
  border-radius: border_radius
  border: border_thickness solid alt_border_color
  padding: 1rem
  position: absolute
  z-index: 100
  transform: translate(-50%, 0)

.scroll_container
  min-height: 0
  min-width: 0
  display: flex
  flex-direction: column
  gap: 1rem
  padding: 1rem
  .scroll
    background-color: inner_panel_color
    overflow-y: auto
    min-height: 6rem
    max-height: max-content
    flex: 1
    padding: 1rem
    display: flex
    flex-direction: column
    gap: 4rem
    scrollbar-width: thin
    scrollbar-color: highlight_color alt_background_color
    &::-webkit-scrollbar
      width: 0.5rem
    &::-webkit-scrollbar-track
      background: alt_background_color
    &::-webkit-scrollbar-thumb
      background-color: highlight_color
    pre
      overflow-x: auto

.targets
  font-size: small_font_size