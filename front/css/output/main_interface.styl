@require('../common/base.styl')

#container
  display: grid
  grid-template: auto 1fr / @css{min(400px, 50%)} 1fr @css{min(500px, 50%)}
  height: 100%
  @require('../main_interface/top.styl')
  #graph_container
    grid-column: 1 / 4
    grid-row: 2
    min-height: 0
    .vis-network
      outline: none
  #loading
    display: grid
    place-items: center
    font-size: 5vw
  #left_panel
    grid-row: 2
    grid-column: 1
    z-index: 1
    min-height: 0
    display: flex
    flex-direction: column
    #left_panel_controls
      margin-top: auto
      display: flex
      justify-content: space-evenly
      padding: 1rem 0
      background-color: panel_color
    .command_title
      min-height: 3rem
      h3
        text-align: left
    .history_title
      display: flex
      .history_controls
        display: flex
        .favorited
          color: favorite_color
    .play
      align-self: flex-start
      display: flex
      gap: 1rem
      align-items: center
  #selection
    grid-row: 2
    grid-column: 3
    z-index: 1
    min-height: 0
    display: flex
    flex-direction: column
    .tabs
      display: flex
      .selected
        background-color: button_background_color
      .tabs_title
        display: flex
#tooltip
  display: flex
  flex-direction: column
  background-color: button_background_color
  alt_border()
  padding: 1rem
  position: absolute
  z-index: 100
  transform: translate(-50%, 0)

.panel_title
  padding: 0 1rem

.success
  color: success_color

.failure
  color: failure_color

.pending
  color: pending_color