@require('../common/base.styl')

#container
  display: grid
  grid-template: auto 1fr / @css{min(400px, 50%)} 1fr @css{min(500px, 50%)}
  height: 100%
  @require('../main_interface/top.styl')
  #graph_container
    grid-column: 1 / 4
    grid-row: 2
    .vis-network
      outline: none
  #loading
    display: grid
    place-items: center
    font-size: 5vw
  #left_panel
    grid-row: 2
    grid-column: 1
    z-index: 1
  #selection
    grid-row: 2
    grid-column: 3
    z-index: 1
    overflow-y: auto
#tooltip
  display: flex
  position: absolute
  z-index: 100
  transform: translate(-50%, 0)