@import url('https://fonts.googleapis.com/css2?family=Exo+2&display=swap')

background_color = rgb(46, 47, 48)
panel_color = rgb(36, 36, 36)
highlight_color = rgb(252, 98, 3)
button_background_color = background_color
font_color = white
title_color = black
button_font_color = font_color
main_font = 'Exo 2', sans-serif
base_font_size = 1rem
title_font_size = 3rem

highlight_border()
  border-radius: 1rem
  border: 2px solid highlight_color

dropdown()
  font-size: 1rem
  font-family: main_font
  background-color: white
  border: 1px solid black
  border-radius: 2px
  padding: 0.1rem

body
  font-family: main_font
  color: font_color
  font-size: base_font_size
  background-color: background_color
  margin: 0
  padding: 0

.panel
  background-color: panel_color

.fas
  font-size: 1.5rem
  flex-grow: 0
  color: highlight_color

.fa-fw 
  display: grid
  place-items: center
  height: 1.25em

h1
  text-align: center
  font-size: title_font_size
  margin: 0

ul
  margin: 0

select
  dropdown()

.button, input[type=button], input[type=submit], input[type=reset]
  cursor: pointer
  padding: 1rem
  background-color: button_background_color
  color: button_font_color
  flex-grow: 0
  highlight_border()

input[type=text]
  highlight_border()
  padding: 0.5rem

.icon_button
  cursor: pointer
