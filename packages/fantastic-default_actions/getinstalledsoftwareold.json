{
  "name": "Get Installed Software",
  "description": "Placeholder \"dirty\" way to get installed software pending a more elegant script",
  "hosts": ["local", "remote"],
  "functions": {
    "run": {
      "command": "Get-WmiObject -Class Win32_Product",
      "method": "invoke",
      "json": true,
      "result": [
        {
          "id": {
            "combine": ["IdentifyingNumber", {"static": "header"}]
          },
          "values": [
            {"type": "header", "content": "Name"}
          ]
        },
        {
          "id": "IdentifyingNumber",
          "values": [
            {"labelled": "Version"},
            {"labelled": "Vendor"}
          ]
        }
      ]
    }
  }
}